<div class="jumbotron">
<h1>Sign up below to Contribute Articles</h1>
</div>
<div class="container">
  <%= form_for @author do |form| %>
    <p><%= form.text_field :name, placeholder: "Name" %></p>
    <p><%= form.text_area :email, placeholder: "Email" %></p>
    <p><%= form.submit %></p>
  <% end %>
</div>
