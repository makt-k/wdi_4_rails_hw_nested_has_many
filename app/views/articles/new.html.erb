<div class="jumbotron">
<h1>Write your article below</h1>
</div>
<div class="container">
<%= form_for [@author, @article] do |form| %>
  <p><%= form.text_field :title, placeholder: "Title" %></p>
  <p><%= form.text_field :body, placeholder: "Start writing" %></p>
  <p><%= form.submit %></p>
<% end %>
</div>
